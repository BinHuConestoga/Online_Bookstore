<Window x:Class="BookstoreApp.BookDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Book Details" Height="800" Width="600" WindowState="Maximized">
    <Grid>
        <StackPanel Margin="10">
            <Image x:Name="BookPictureImage" Width="300" Height="400" Margin="0,0,0,10"/>
            <TextBlock x:Name="TitleTextBlock" FontWeight="Bold" FontSize="25" Margin="0,0,0,5"/>
            <TextBlock x:Name="AuthorTextBlock" FontWeight="Bold" FontSize="25" Margin="0,0,0,5"/>
            <TextBlock x:Name="PriceTextBlock" FontWeight="Bold" FontSize="25" Margin="0,0,0,5"/>
            <TextBlock x:Name="CategoryTextBlock" FontWeight="Bold" FontSize="25" Margin="0,0,0,5"/>
            <TextBlock x:Name="DescriptionTextBlock" FontWeight="Bold" FontSize="25" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Window>