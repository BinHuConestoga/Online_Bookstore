@model IEnumerable<OnlineBookstore.Models.Order>

@{
    ViewData["Title"] = "Order History";
}

<div class="container">
    <h1>Your Orders</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Date</th>
                <th>Status</th>
                <th>Total Items</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate.ToShortDateString()</td>
                    <td>@order.Status</td>
                    <td>@order.Items.Count</td>
                </tr>
            }
        </tbody>
    </table>
</div>
