<Window x:Class="BookstoreApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BookstoreApp"
        Title="Welcome to Bookstore" Height="300" Width="400" Background="Orange" WindowState="Maximized">
    <Grid>
        <!-- Login Section -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Login" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>
            <Label Content="User Name:"/>
            <TextBox x:Name="UserNameTextBox" Width="200"/>
            <Label Content="Password:" Margin="0,10,0,0"/>
            <PasswordBox x:Name="PasswordBox" Width="200"/>
            <Button Content="Sign On" Margin="0,20,0,0" Width="100" Click="SignOnButton_Click"/>
            <Button Content="Register" Margin="0,10,0,0" Width="100" Click="RegisterButton_Click"/>
            <TextBlock x:Name="LoginWarningTextBlock" Foreground="Red" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>